<%= form_for [refinery, :addresses_admin, @address] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @address,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :customer -%>
    <%= f.text_field :customer, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :order -%>
    <%= f.text_field :order  -%>

  </div>
  
  <div class='field'>
    <%= f.label :is_billing -%>
    <%= f.check_box :is_billing, :checked => @address[:is_billing]  -%>

  </div>
  
  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name  -%>

  </div>
  
  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name  -%>

  </div>
  
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone  -%>

  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>

  </div>
  
  <div class='field'>
    <%= f.label :address1 -%>
    <%= f.text_field :address1  -%>

  </div>
  
  <div class='field'>
    <%= f.label :address2 -%>
    <%= f.text_field :address2  -%>

  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>

  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state  -%>

  </div>
  
  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip  -%>

  </div>
  
  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.addresses.admin.addresses.address'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @address.first_name) %>
<% end -%>
